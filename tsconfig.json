{
    "compilerOptions": {
        "target": "ES5",
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/components/ui/*": ["src/components/ui/*"],
            "@/lib/*": ["src/lib/*"],
            "@/hooks/*": ["src/hooks/*"]
        },
        "module": "ESNext",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
